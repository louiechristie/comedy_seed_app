<ul class="errors">
  <% @comedian.errors.full_messages.each do |error| %>
    <li>
      <%= error %>
    </li> 
  <% end %>
</ul>

<%= form_for(@comedian) do |f| %>
    
  <div id="stage_name">
    <%= f.label :stage_name %>
    <%= f.text_field :stage_name, value: @comedian.try(:stage_name) %>
  </div>
  
  <div id="media">
    <div class="row">
      <div class="small-6 small-centered columns">
        <div id="pic">
          <%= f.label :image %>
          <%= image_tag @comedian.image.url || "silhouette.png" %>
          <%= f.file_field :image %><br />
        </div>
        <%= f.label "Youtube video link" %>
        <%= f.text_field :video, value: @comedian.try(:video) %><br />
        <%= raw(youtube_embed(@comedian.try(:video))) %>
      </div>
    </div>
  </div>
  <div id="text">
    <div id="bio">
      <%= f.label "Biography" %><br />
      <%= f.text_area :bio, value: @comedian.try(:bio) || "No bio supplied."%><br />
    </div>
  </div>


  <p><%= f.submit id: "submit", value: "Save" %></p>

<% end %>
