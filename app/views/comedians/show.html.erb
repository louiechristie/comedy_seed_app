<% content_for :title do %>
  <%= @comedian.try(:stage_name) %>
<% end %> 

<div class="row">
  <div class="small-6 columns">
      <div id="pic">
        <%= image_tag @comedian.image.url || "silhouette.png" %>
      </div>
  </div>

  <div class="small-6 columns">
    <h1>
      <%= @comedian.try(:stage_name) %>
      <%= link_to "Edit", edit_comedian_path if @comedian == current_user %>
    </h1>
    Stars: <span class="stars"><%= @comedian.avg_rating.nan? ? "no votes" : raw(stars(@comedian.avg_rating.round))  %></span>
      <br />
      <br />
      <%= render partial: 'rating' %>
  </div>
</div>

<div class="row" id="video">
  <div class="small-8 small-centered columns">
    <%= raw(youtube_embed(@comedian.try(:video))) || "No video supplied." %>
  </div>
</div>
  
<div class="row">
  <div class="small-12 columns">
    <div id="text">
      <div id="bio">
        <h2>Bio</h2> 
        <%= simple_format(@comedian.try(:bio) || "No biography information available.") %>
      </div>

      <div id="reviews">

        <% @reviews.each do |review| %>
          <%= render review %>
        <% end %>

        <div class="your_review">
          <% if current_user %>
            <%= form_for @review do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.hidden_field :comedian_id, value: @comedian.id %>
              <%= f.label "Your Review:" %><br />
              <%= f.text_area :content, cols: 100 %><br />
              <%= f.submit %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




