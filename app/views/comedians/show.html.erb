<p id="notice"><%= notice %></p>

<h1 id="name"><%= @comedian.try(:stage_name) %> <%= link_to "Edit", edit_comedian_path if @comedian == current_user %>
</h1>

<div id="rating">
  <%= render @rating %>
</div>

<div id="media">
  <div id="pic">
    <%= image_tag @comedian.image.url || "mic.svg" %>
  </div>
  <div id="video">
    <%= @comedian.try(:video) || "No video supplied." %></br>
    <%= raw(youtube_embed(@comedian.try(:video))) %>
  </div>
</div>

<div id="text">
  <div id="bio">
    Bio: <%= simple_format(@comedian.try(:bio) || "No biography information available.") %>
  </div>

  <div id="reviews">

    <% @reviews.each do |review| %>
      <%= render review %>
    <% end %>

    <div class="your_review">
      <% if current_user %>
        <%= form_for @review do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :comedian_id, value: @comedian.id %>
          <%= f.label "Your Review:" %><br />
          <%= f.text_area :content, cols: 100 %><br />
          <%= f.submit %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
