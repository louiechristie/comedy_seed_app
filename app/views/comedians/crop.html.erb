<h1>Crop Image</h1>

<%= image_tag @comedian.image_url(:large), id: "cropbox" %>

<%= form_for @comedian do |f| %>
  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %><br />
  <% end %>
  <div class="actions">
    <%= f.submit "Crop", class: "button expand" %>
  </div>

<% end %>